<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido a TeleTrivia!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La app diseñada para testear tu conocimiento y retar a tus amigos!\nElija los parámetros de juego"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:paddingBottom="16dp" />

        <!-- Categoría -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría:"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B2DFDB" />

        <!-- Cantidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="# Preguntas"
            android:inputType="number"
            android:backgroundTint="#B2DFDB" />

        <!-- Dificultad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dificultad:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerDificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B2DFDB" />

        <!-- Contador de tiempo -->
        <TextView
            android:id="@+id/tvContador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo restante: 00"
            android:textSize="18sp"
            android:textColor="#D32F2F"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnComprobarConexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprobar Conexión"
                android:backgroundTint="#1A237E"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnComenzar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comenzar"
                android:enabled="false"
                android:backgroundTint="#BDBDBD"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
